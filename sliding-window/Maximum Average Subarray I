//Optimised - Sliding window... Self
class Solution {
    public double findMaxAverage(int[] nums, int k) {
        int a=0, b=0;
        double sum=0, maxAvg=Double.NEGATIVE_INFINITY;
        while(b<nums.length)
        {
            sum+=nums[b];
            if(b-a==k-1)
            {
                maxAvg = Math.max(sum/k, maxAvg);
                sum-=nums[a];
                a++;
            }
            b++;
        }
        return maxAvg;
    }
}
